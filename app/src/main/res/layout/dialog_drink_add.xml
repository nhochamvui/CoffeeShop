<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adnroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="450dp"
    adnroid:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonDrinkChooseImg"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:text="Choose"
            android:textSize="5sp"
            adnroid:icon="@drawable/ic_baseline_photo_library_24"
            adnroid:iconPadding="1dp"
            adnroid:iconSize="20dp"
            adnroid:iconTintMode="src_in"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.127"
            adnroid:layout_constraintStart_toStartOf="parent"
            adnroid:layout_constraintTop_toBottomOf="@+id/imageViewDrinkThumbnail" />

        <ImageView
            android:id="@+id/imageViewDrinkThumbnail"
            android:layout_width="79dp"
            android:layout_height="86dp"
            android:layout_marginTop="32dp"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.126"
            adnroid:layout_constraintStart_toStartOf="parent"
            adnroid:layout_constraintTop_toTopOf="parent"
            adnroid:srcCompat="@drawable/ic_baseline_local_bar_24"
            tools:ignore="VectorDrawableCompat"
            tools:srcCompat="@drawable/ic_baseline_local_bar_24" />

        <EditText
            android:id="@+id/editTextDrinkPrice"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_outline_monetization_on_24"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName"
            android:textSize="14sp"
            adnroid:layout_constraintBottom_toBottomOf="parent"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.207"
            adnroid:layout_constraintStart_toEndOf="@+id/imageViewDrinkThumbnail"
            adnroid:layout_constraintTop_toBottomOf="@+id/editTextDrinkName"
            adnroid:layout_constraintVertical_bias="0.017" />

        <EditText
            android:id="@+id/editTextDrinkName"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_baseline_local_bar_24"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="14sp"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.217"
            adnroid:layout_constraintStart_toEndOf="@+id/imageViewDrinkThumbnail"
            adnroid:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDrinkCategory"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/ic_outline_category_24"
            android:ems="5"
            android:hint="Category"
            android:inputType="textPersonName"
            android:textSize="14sp"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.195"
            adnroid:layout_constraintStart_toEndOf="@+id/imageViewDrinkThumbnail"
            adnroid:layout_constraintTop_toBottomOf="@+id/editTextDrinkPrice" />

        <EditText
            android:id="@+id/editTextDrinkDescription"
            android:layout_width="243dp"
            android:layout_height="163dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="14sp"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.508"
            adnroid:layout_constraintStart_toStartOf="parent"
            adnroid:layout_constraintTop_toBottomOf="@+id/editTextDrinkCategory" />

        <Button
            android:id="@+id/buttonDrinkConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            adnroid:layout_constraintBottom_toBottomOf="parent"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintStart_toStartOf="parent"
            adnroid:layout_constraintTop_toBottomOf="@+id/editTextDrinkDescription" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            adnroid:layout_constraintBottom_toTopOf="@+id/editTextDrinkDescription"
            adnroid:layout_constraintEnd_toEndOf="parent"
            adnroid:layout_constraintHorizontal_bias="0.127"
            adnroid:layout_constraintStart_toStartOf="parent"
            adnroid:layout_constraintTop_toBottomOf="@+id/buttonDrinkChooseImg"
            adnroid:layout_constraintVertical_bias="0.718" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>